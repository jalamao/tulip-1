#!/bin/sh

thisdir=$(dirname $0)
if test "$thisdir" = "." ; then
  thisdir=$PWD
fi
prefix=@prefix@
exec_prefix=@exec_prefix@
includedir=@includedir@
libdir=@libdir@
qtversion=@QT_VERSION@
libversion=
# check for MacOS of Windows installation
if test "$(basename $thisdir)" = "MacOS" ; then
  if test -d $(dirname $thisdir)/lib; then
# MacOS bundle
    includedir=$(dirname $thisdir)/include
    libdir=$(dirname $thisdir)/lib
  fi
fi
if test -f $thisdir/assistant.exe ; then
# Windows installation
  drive=`echo $thisdir | awk -F / '{print $2}'`
  thisdir=${thisdir/\/$drive\//$drive:/}
  includedir=$thisdir/include
  libdir=$this/lib
  libversion=-@WIN_VERSION@
fi

usage()
{
    cat <<EOF
Usage: tulip-config [OPTIONS]
Options:
	--version
	--libs
	--cxxflags
	--glincludes
        --pluginpath
        --qtlibs
        --qtincludes
	
EOF
    exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --version)
      echo @VERSION@
      ;;
    --cxxflags)
      echo -I${includedir} @QT_CPPFLAGS@
      ;;
    --glincludes)
      echo @GL_INCLUDES@
      ;;
    --gllibs)
      echo @GL_LDFLAGS@ @LIB_GL@
      ;;
    --libs)
      echo -L${libdir} -ltulip${libversion} -ltulip-ogl${libversion} -ltulip-qt${qtversion}${libversion}
      ;;
    --pluginpath)
      echo ${libdir}/tlp/plugins
      ;;
    --qtlibs)
      echo @QT_LDFLAGS@ @LIB_QT@
      ;;
    --qtincludes)
      echo @QT_INCLUDES@
      ;;
    *)
      usage
      ;;
  esac
  shift
done

exit 0
